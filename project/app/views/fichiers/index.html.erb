<p id="notice"><%= notice %></p>

<h1>Listing Fichiers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Filepath</th>
      <th>Record date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fichiers.each do |fichier| %>
      <tr>
        <td><%= fichier.name %></td>
        <td><%= fichier.filepath %></td>
        <td><%= fichier.record_date %></td>
        <td><%= link_to 'Show', fichier %></td>
        <td><%= link_to 'Edit', edit_fichier_path(fichier) %></td>
        <td><%= link_to 'Destroy', fichier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

