<style>

  a.button { color: white; }
  a.button:hover { color: white;}
  a.new_file { color: black; }
  a.new_file:hover { color: white;}
  a.ent { color: black; }
  a.ent:hover { color: white;}
</style>
<p id="notice"><%= notice %></p>

<h1>Liste Fichiers</h1>
<br>
<%= link_to 'Nouveau Fichier', new_fichier_path, class: 'new_file' %>
<br><br>
Recherche:
<% @clients.each do |fichier| %>
    <%= link_to_if fichier.client, fichier.client || '(pas de client)', fichiers_path(client_id: fichier.id), class: 'ent' %>
<% end %>

<br><br>

<div class="tableau" >
<table>
    <tr>
      <td>Nom</td>
      <td>Site</td>
      <td>Chemin du fichier</td>
      <td>Date de cr√©ation</td>
     <td class='col_button'>Regarder</td>
     <td class='col_button'>Editer</td>
     <td class='col_button'>Detruire</td>
    </tr>
    <% @fichiers.each do |fichier| %>
      <tr>
        <td><%= fichier.name %></td>
        <td><%= fichier.client.try(:client) || '(pas de client)' %></td>
        <td><%= fichier.filepath %></td>
        <td><%= fichier.record_date %></td>
        <td><%= link_to 'Regarder', fichier, class: 'button' %></td>
        <td><%= link_to 'Editer', edit_fichier_path(fichier), class: 'button' %></td>
        <td><%= link_to 'Detruire', fichier, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %></td>
      </tr>
    <% end %>
</table>
</div>